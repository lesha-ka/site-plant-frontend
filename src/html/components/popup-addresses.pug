    .popup-wrapper.popup-wrapper-address.js-fixBlock
        .popup-address
            .popup-address-inner
                .popup-address-close.js-popupClose
                h3.popup-address-title Редактировать адрес "Дом Москва"
                .popup-address-input-wrapper
                    .popup-address-input-title Название:
                    input.popup-address-input(type="text" placeholder="Дом Москва")
                .popup-address-inputs
                    .popup-address-input-wrapper.popup-address-input-wrapper-short
                        .popup-address-input-title Регион:
                        input.popup-address-input(type="text" placeholder="Краснодарский Край")
